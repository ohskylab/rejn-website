/* =banner */
.banner {
  margin: 0 0 1em 0;
  text-align: center;
  @media mq-medium {
    margin-bottom: 7em;
  }
}

.banner__menu {
  position: absolute;
  right: 2.5%;
  top: 0;
  @media mq-medium {
    display: none;
  }
}

.banner__lang-selector {
  left: 2.5%;
  position: absolute;
  top: 0;
}


/* ==banner-es */
.banner--es {
  @media mq-medium {
    margin-bottom: 1em;
  }
}



/* =navigation */
.navigation {
  font-size: 0.875em;
  margin-top: 2em;
  @media mq-medium {
    left: 0;
    margin: 0;
    padding: 0;
    position: absolute;
    text-align: center;
    top: 16em;
    width: 100%;
  }
}

.navigation__inner {
  padding: 0;
  @media mq-medium {
    margin: 0 auto;
    max-width: 46em;
  }
}

.navigation__item {
  padding: 0.5em 0;
  margin: 0;
  list-style: none;
  border-bottom: 1px dashed grey-light;
  &.is-active {
    background: grey-lightest;
  }
  &::after {
    float: right;
  }
  &:last-child {
    border-bottom: none;
  }
  @media mq-medium {
    border-bottom: none;
    display: inline-block;
    margin-right: 1.5em;
    padding-left: 1.5em;
    &:last-child {
      margin-right: 0;
    }
  }
}



/* =complementary */
.complementary {
  font-size: 13px;
  @media mq-medium {
    position: absolute;
    top: 0;
    right: 2.5%;
    text-align: right;
  }
}

.complementary__inner {
  padding: 0;
}

.complementary__item {
  list-style: none;
  padding: 0;
}



/* =contentinfo */
.contentinfo {
  border-top: 1px solid grey-light;
  color: grey-light;
  font-size: 13px;
  margin-top: 3em;
  text-align: center;
  padding-top: 1em;
  @media mq-medium {
    margin-top: 6em;
  }
}

.contentinfo__inner {
  font-size: 0.875em;
}

.contentinfo__external {
  padding: 0;
}

.contentinfo__external-item {
  display: inline-block;
  list-style: none;
  padding: 0 1em;
  margin: 0;
}
