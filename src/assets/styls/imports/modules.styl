.figure {
  max-width: 660px;
  width: 100%;
}

.figure__media {
  background: grey-lightest;
  overflow: hidden;
  position: relative;
  width: 100%;
  .old-ie & {
    _position: static;
    _width: auto;
  }
}

.figure__media {
  &:before {
    content: "";
    float: right;
    padding-top: 50%;
  }
}


/* ==figure--320x240 */
.figure--320x240 {
  max-width: 320px;
  .figure__media {
    &:before {
      padding-top: 75%;
    }
  }
}


/* ==figure--270x360 */
.figure--270x360 {
  max-width: 270px;
  .figure__media {
    &:before {
      padding-top: 133.3333333333%;
    }
  }
}


/* ==figure--pull-right */
.figure--pull-left {
  @media mq-wide {
    float: left;
    margin-bottom: 1em;
    margin-right: 2em;
  }
}


/* ==figure--pull-right */
.figure--pull-right {
  @media mq-wide {
    float: right;
    margin-bottom: 1em;
    margin-left: 2em;
  }
}



/* =icon */
.icon:before {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  font-family: font-family-icomoon;
  font-style: normal;
  font-variant: normal;
  font-weight: normal;
  speak: none;
  text-transform: none;
  line-height: 1;
  font-size: 18px;
  float: left;
  margin-right: 0.25em;
}

.icon--inline:before {
  float: none;
  display: inline-block;
  padding-left: 3px;
  position: relative;
  top: 3px;
}

.icon--arrow-right:before {
  content: "\e600";
}
.icon--language:before {
  content: "\e601";
}
.icon--phone:before {
  content: "\e602";
}
.icon--email:before {
  content: "\e603";
  font-size: 17px;
}
.icon--menu:before {
  content: "\e604";
}
.icon--arrow-right:before {
  content: "\e605";
}


