/* =alert */
.alert {
  clear: both;
  border: 0 dotted #d58512;
  border-width: 0.25em 0.063em;
  border-style: solid dotted;
  margin-bottom: 2em;
  padding: 0 1em 1em 1em;
  @media mq-medium {
    padding-left: 2em;
    padding-right: 2em;
  }
}


/* =call-to-action */
.call-to-action {
  font-size: 0.875em;
  border: 1px dotted green-darker;
  border-width: 1px 0;
  clear: both;
  margin: 3em 0 3em 0;
  padding: 3em 1em 1em 1em;
  text-align: center;
  @media mq-medium {
    padding-left: 2em;
    padding-right: 2em;
  }
}

.call-to-action__items {
  margin-bottom: 1em;
  padding: 0;
}

.call-to-action__item {
  list-style: none;
  padding-bottom: 1em;
}

.call-to-action__item-inner {
  background: green;
  border-radius: 4px;
  color: white;
  display: inline-block;
  padding: 0.65em 2.1em 0.65em 0.75em;
  position: relative;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
  &:hover {
    text-shadow: none;
  }
  &:after {
    font-family: font-family-icomoon;
    content: "\e600";
    display: inline-block;
    position: absolute;
    right: 0.75em;
    top: 50%;
    margin-top: -0.6em;
  }
}



/* =embed */
.embed {
  height: 0;
  overflow: hidden;
  padding-bottom: 80%;
  padding-top: 30px;
  position: relative;
}

.embed__inner {
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}



