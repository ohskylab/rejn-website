/* =call-to-action */
.call-to-action {
  font-size: 0.875em;
  border: 1px dotted green-dark;
  border-width: 1px 0;
  clear: both;
  margin: 3em 0 3em 0;
  padding: 3em 1em 1em 1em;
  text-align: center;
  @media mq-medium {
    padding-left: 2em;
    padding-right: 2em;
  }
}

.call-to-action__items {
  margin-bottom: 1em;
  padding: 0;
}

.call-to-action__item {
  list-style: none;
  padding-bottom: 1em;
}

.call-to-action__item-inner {
  background: green;
  border-radius: 4px;
  color: white;
  display: inline-block;
  padding: 0.65em 2.1em 0.65em 0.75em;
  position: relative;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
  &:hover {
    text-shadow: none;
  }
  &::after {
    font-family: font-family-icomoon;
    content: "\e600";
    display: inline-block;
    position: absolute;
    right: 0.75em;
    top: 50%;
    margin-top: -0.6em;
  }
}



/* =embed */
.embed {
  height: 0;
  overflow: hidden;
  padding-bottom: 80%;
  padding-top: 30px;
  position: relative;
}

.embed__inner {
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}



/* =icon */
.icon:before {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  font-family: font-family-icomoon;
  font-style: normal;
  font-variant: normal;
  font-weight: normal;
  speak: none;
  text-transform: none;
  line-height: 1;
  font-size: 18px;
  float: left;
  margin-right: 0.25em;
}

.icon--inline:before {
  float: none;
  display: inline-block;
  padding-left: 3px;
  position: relative;
  top: 3px;
}

.icon--arrow-right:before {
  content: "\e600";
}
.icon--language:before {
  content: "\e601";
}
.icon--phone:before {
  content: "\e602";
}
.icon--email:before {
  content: "\e603";
  font-size: 17px;
}
.icon--menu:before {
  content: "\e604";
}
.icon--arrow-right:before {
  content: "\e605";
}



/* =note */
.note {
  color: grey;
  border: 1px dotted grey-lightest;
  border-width: 1px 0;
  margin-bottom: 2em;
  padding: 2em 2em 0 2em;
  text-align: center;
}



/* =pull-right */
.pull-left {
  @media mq-medium {
    float: left;
    margin-right: 2em;
  }
}



/* =pull-right */
.pull-right {
  @media mq-medium {
    float: right;
    margin-left: 2em;
  }
}

/* =widget */
.widget {
  margin-bottom: 2em;
}
